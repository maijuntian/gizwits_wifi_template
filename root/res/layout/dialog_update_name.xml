<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/text_gray_normal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:drawablePadding="10dp"
        android:lineSpacingExtra="3dp"
        android:text="@string/update_name" />

    <EditText
        android:id="@+id/et_name"
        style="@style/edit_style_black"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_trans_corner_gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/text_app_color_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="@string/cancel" />

        <TextView
            android:id="@+id/tv_confirm"
            style="@style/text_white_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/bt_app_color_right_bottom_corners"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="@string/confirm" />

    </LinearLayout>


</LinearLayout>