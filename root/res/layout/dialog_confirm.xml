<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_content"
        style="@style/text_xxgray_normal"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:drawablePadding="10dp"
        android:lineSpacingExtra="3dp"
        android:text="" />

    <View style="@style/divider_line" />

    <TextView
        android:id="@+id/tv_know"
        style="@style/text_white_normal"
        android:layout_width="match_parent"
        android:background="@drawable/bt_app_color_bottom_corners"
        android:gravity="center_horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="@string/know" />

</LinearLayout>